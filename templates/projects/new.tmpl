<div class="col-sm-offset-2 col-sm-8">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">New Project</h3>
        </div>
        <div class="panel-body">
            <form method="POST" action="/projects" role="form" class="form-horizontal">
                <div class="form-group">
                    <label for="projectName" class="col-sm-2 control-label">Name:</label>

                    <div class="col-sm-6">
                        <input id="projectName" name="projectName" class="form-control" value="{{.Name}}" placeholder="New Project">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="submit" class="btn btn-default" value="Save"></submit>
                        <a href="/projects">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>